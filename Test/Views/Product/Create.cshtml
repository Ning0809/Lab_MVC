@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductCreateViewModel

<h1>Product Create</h1>

<form asp-action="CreateProduct">
	<div class="form-group">
		<label>名稱</label>
		<input asp-for="Product.Name" class="form-control"  type="text"/>
		<span asp-validation-for="Product.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>價格</label>
		<input asp-for="Product.Price" class="form-control" type="text" />
		<span asp-validation-for="Product.Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>圖片路徑</label>
		<input asp-for="Product.ImgUrl" class="form-control" type="text"/>
		<span asp-validation-for="Product.ImgUrl" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<input type="submit" value="CreateProduct" class="btn btn-primary" />
	</div>
</form>

